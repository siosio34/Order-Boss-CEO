<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="15dp"
    android:paddingBottom="32dp"
    android:layout_marginBottom="2dp">
    <TextView
        android:id="@+id/processedNumber"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="24dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/icon_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/processedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/processedNumber"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/processedPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="1dp"
        android:textSize="16sp"
        android:textColor="#95989A"
        app:layout_constraintLeft_toRightOf="@+id/processedNumber"
        app:layout_constraintTop_toBottomOf="@+id/processedName"/>
    <TextView
        android:id="@+id/processedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:textSize="14sp"
        android:textColor="#95989A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cardview_reservation_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedPhoneNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/processedRequestText"/>
    <TextView
        android:id="@+id/processedOrderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="주문내역"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedPhoneNum"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/processedOrderList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedOrderText"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/processedTotalPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="합계"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedOrderList"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/processedTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:textSize="21sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/processedTotalPriceText"
        app:layout_constraintTop_toBottomOf="@+id/processedTotalPriceText"
        app:layout_constraintBottom_toTopOf="@+id/processedTotalPriceText"/>
    <TextView
        android:id="@+id/processedTotalPriceOneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="원"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/processedTotalPrice"
        app:layout_constraintTop_toBottomOf="@+id/processedTotalPrice"
        app:layout_constraintBottom_toTopOf="@+id/processedTotalPrice"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cardview_reservation_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedTotalPriceText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/processedRemainTimeWrapper"/>

    <TextView
        android:id="@+id/processedRequestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="부탁드릴 내용"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedTotalPriceText"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/processedRequestContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#95989A"
        android:gravity="left|top"
        android:maxWidth="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedRequestText"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/processedRemainTimeWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:background="@drawable/cardview_processed_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processedRequestContent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/processedWatch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_watch"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/processedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/processedWatch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/processedMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="분"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/processedTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>